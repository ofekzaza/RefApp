<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StackBase">

    <Button
        android:id="@+id/Box"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="180dp"
        android:backgroundTint="#ffa54f"
        android:onClick="boxStackBase"
        android:text="Box"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintCircleRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Crate"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="260dp"
        android:backgroundTint="#32cd32"
        android:onClick="crateStackBase"
        android:text="Crate"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintCircleRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Treasure"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="420dp"
        android:backgroundTint="#ffff00"
        android:onClick="treasureStackBase"
        android:text="Treasure"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintCircleRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/AllianceCargo"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="340dp"
        android:backgroundTint="#ff0000"
        android:onClick="allianceCargoStackBase"
        android:text="Alliance Cargo"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintCircleRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Barrel"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#8b4513"
        android:onClick="barrelStackBase"
        android:text="Barrel"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintCircleRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/StackerText"
        android:layout_width="290dp"
        android:layout_height="66dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif"
        android:text="Select Stack Base"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="32sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>