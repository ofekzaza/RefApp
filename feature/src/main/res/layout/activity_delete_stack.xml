<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteStack">

    <Button
        android:id="@+id/delStack"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="153dp"
        android:layout_height="81dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="404dp"
        android:backgroundTint="#fe2020"
        android:onClick="deleteStack"
        android:text="Delete Stack"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/returnToMenu"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="153dp"
        android:layout_height="81dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="404dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:onClick="returnToMainMenu"
        android:text="return to menu"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dispStack"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="153dp"
        android:layout_height="81dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="240dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:onClick="dispStack"
        android:text="Display stack"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DeleteStackTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Choose A Stack To Delete"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/stackNum"
        android:layout_width="62dp"
        android:layout_height="48dp"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stackShowcase"
        app:layout_constraintTop_toBottomOf="@+id/DeleteStackTxt" />

    <TextView
        android:id="@+id/stackShowcase"
        android:layout_width="178dp"
        android:layout_height="286dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="23dp"
        android:text="Selected Stack:"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/dispStack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DeleteStackTxt" />

</android.support.constraint.ConstraintLayout>