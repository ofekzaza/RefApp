<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseCargoActivity">

    <Button
        android:id="@+id/BarrelButton"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="#8B4513"
        android:text="Barrel"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/CrateButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="Barrel"/>

    <Button
        android:id="@+id/AllianceButton"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:background="#ff0000"
        android:text="Alliance"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/BoxButton"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="Alliance"/>

    <Button
        android:id="@+id/TreasureButton"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:background="#ffff00"
        android:text="Treasure"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="Treasure"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="16dp"
        android:text="Choose Cargo"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BoxButton"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:background="#ffa54f"
        android:text="Box"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/TreasureButton"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="Box"/>

    <Button
        android:id="@+id/CrateButton"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="#32CD32"
        android:text="Crate"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/TreasureButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="Crate"/>
</android.support.constraint.ConstraintLayout>